{% import 'macros/font-awesome.html.twig' as icons %}
{% extends 'partials/base.html.twig' %}
{% set tags = page.taxonomy.tag %}

{% block content %}
	<div id="chapter">
	<header class="{{ page.taxonomy.category[0] }}">
		{% if ( header.status == 'incomplete' ) %}
			<div class="pattern-status incomplete">
				{{ icons.faIcon('fas fa-exclamation-circle') }}<span class="label">Pattern Incomplete</span>
			</div>
		{% else %}
			<div class="pattern-status complete">
				{{ icons.faIcon('fas fa-check-circle') }}<span class="label">Pattern Complete</span>
			</div>
		{% endif %}
		<h1 class="page-title">{% if header.title %}{{ header.title }} {% endif %}</h1>
	</header>

		<div id="body-inner">
			{{ page.content }}
		</div>
	</div>
{% endblock %}
